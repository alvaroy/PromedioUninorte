<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/credits_completed_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:text="@string/credits_comp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/credits_completed_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/credits_completed_txtview"
        android:layout_below="@+id/credits_completed_txtview"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:imeOptions="flagNoFullscreen"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/cum_avg_dots_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/credits_completed_edit"
        android:layout_below="@+id/credits_completed_edit"
        android:layout_marginTop="20dp"
        android:text="@string/cum_avg_dots"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/cum_avg_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cum_avg_dots_txtview"
        android:layout_below="@+id/cum_avg_dots_txtview"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:imeOptions="flagNoFullscreen"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/ing_datos_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cum_avg_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/save" />

</RelativeLayout>
